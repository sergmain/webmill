<project name="riverock SSO schema classes gen" default="gen_all_schema" basedir=".">

    <import file="../riverock-globals-prop.xml"/>
    <import file="../riverock-globals-target.xml"/>

    <target name="clean">
        <antcall target="delete_all_schema"/>
    </target>

    <target name="gen_all_schema">
        <antcall target="delete_all_schema"/>
<!--        <antcall target="get_sso_schema"/>-->
        <antcall target="gen_config_schema"/>
    </target>
    <target name="gen_config_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/sso/schema/config/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-sso-config.xsd"/>
        <property name="schema-package-java" value="org.riverock.sso.schema.config"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
