<xs:schema targetNamespace="http://generic.riverock.org/xsd/riverock-database-structure.xsd" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:riverock-db-stuct="http://generic.riverock.org/xsd/riverock-database-structure.xsd">

	<xs:annotation>

		<xs:documentation>Copyright 2002-2003, jSmithy.com, http://www.jSmithy.com</xs:documentation>

	</xs:annotation>

	<xs:annotation>

		<xs:documentation>WebMill XML/XSLT web portlet engine</xs:documentation>

	</xs:annotation>

	<xs:complexType name="DbDatabaseType">

		<xs:sequence>

			<xs:element name="Schema" type="riverock-db-stuct:DbSchemaType"/>

		</xs:sequence>

	</xs:complexType>

	<xs:element name="SchemaElement" type="riverock-db-stuct:DbSchemaType"/>

	<xs:complexType name="DbSchemaType">

		<xs:sequence>

			<xs:element name="Tables" type="riverock-db-stuct:DbTableType" minOccurs="0" maxOccurs="unbounded"/>

			<xs:element name="Views" type="riverock-db-stuct:DbViewType" minOccurs="0" maxOccurs="unbounded"/>

			<xs:element name="Sequences" type="riverock-db-stuct:DbSequenceType" minOccurs="0" maxOccurs="unbounded"/>

			<xs:element name="BigTextTable" type="riverock-db-stuct:DbBigTextTableType" minOccurs="0" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbAbstractTableType" abstract="true">

		<xs:attribute name="schema" type="xs:string"/>

		<xs:attribute name="name" type="xs:string" use="required"/>

		<xs:attribute name="type" type="xs:string"/>

		<xs:attribute name="remark" type="xs:string"/>

	</xs:complexType>

	<xs:complexType name="DbViewType">

		<xs:complexContent>

			<xs:extension base="riverock-db-stuct:DbAbstractTableType">

				<xs:sequence>

					<xs:element name="Text" type="xs:string" minOccurs="0"/>

				</xs:sequence>

			</xs:extension>

		</xs:complexContent>

	</xs:complexType>

	<xs:complexType name="DbViewListType">

		<xs:sequence>

			<xs:element name="View" type="riverock-db-stuct:DbViewType" minOccurs="0" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbTableType">

		<xs:complexContent>

			<xs:extension base="riverock-db-stuct:DbAbstractTableType">

				<xs:sequence>

					<xs:element name="PrimaryKey" type="riverock-db-stuct:DbPrimaryKeyType" minOccurs="0"/>

					<xs:element name="Fields" type="riverock-db-stuct:DbFieldType" minOccurs="0" maxOccurs="unbounded"/>

					<xs:element name="ImportedKeys" type="riverock-db-stuct:DbImportedPKColumnType" minOccurs="0" maxOccurs="unbounded"/>

					<xs:element name="Data" type="riverock-db-stuct:DbDataTableType" minOccurs="0"/>

				</xs:sequence>

			</xs:extension>

		</xs:complexContent>

		<!--		

		<xs:attribute name="schema" type="xs:string"/>

		<xs:attribute name="name" type="xs:string" use="required"/>

		<xs:attribute name="type" type="xs:string"/>

		<xs:attribute name="remark" type="xs:string"/>

-->

	</xs:complexType>

	<xs:complexType name="DbSequenceType">

		<xs:attribute name="name" type="xs:string" use="required"/>

		<xs:attribute name="minValue" type="xs:int" use="required"/>

		<xs:attribute name="maxValue" type="xs:string" use="required"/>

		<xs:attribute name="incrementBy" type="xs:int" use="required"/>

		<xs:attribute name="isCycle" type="xs:boolean"/>

		<xs:attribute name="isOrder" type="xs:boolean"/>

		<xs:attribute name="cacheSize" type="xs:int"/>

		<xs:attribute name="lastNumber" type="xs:long" use="required"/>

	</xs:complexType>

	<xs:complexType name="DbSequenceListType">

		<xs:sequence>

			<xs:element name="Sequences" type="riverock-db-stuct:DbSequenceType" minOccurs="0" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbBigTextTableType">

		<xs:sequence>

			<xs:element name="MasterTable" type="xs:string"/>

			<xs:element name="SlaveTable" type="xs:string"/>

			<xs:element name="MasterPkField" type="xs:string"/>

			<xs:element name="SlavePkField" type="xs:string"/>

			<xs:element name="SlaveFkField" type="xs:string"/>

			<xs:element name="StorageField" type="xs:string"/>

			<xs:element name="SequenceName" type="xs:string"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbFieldType">

		<xs:attribute name="name" type="xs:string" use="required"/>

		<xs:attribute name="dataType" type="xs:string">

			<xs:annotation>

				<xs:documentation source="Тип поля как он есть в базе"/>

			</xs:annotation>

		</xs:attribute>

		<xs:attribute name="applType" type="xs:string"/>

		<xs:attribute name="javaType" type="xs:int"/>

		<xs:attribute name="javaStringType" type="xs:string"/>

		<xs:attribute name="size" type="xs:int" use="required"/>

		<xs:attribute name="decimalDigit" type="xs:int"/>

		<xs:attribute name="nullable" type="xs:int"/>

		<xs:attribute name="defaultValue" type="xs:string"/>

		<xs:attribute name="comment" type="xs:string"/>

	</xs:complexType>

	<xs:complexType name="DbPrimaryKeyType">

		<xs:sequence>

			<xs:element name="columns" type="riverock-db-stuct:DbPrimaryKeyColumnType" minOccurs="0" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbPrimaryKeyColumnType">

		<xs:attribute name="catalogName" type="xs:string"/>

		<xs:attribute name="schemaName" type="xs:string"/>

		<xs:attribute name="tableName" type="xs:string" use="required"/>

		<xs:attribute name="columnName" type="xs:string" use="required"/>

		<xs:attribute name="keySeq" type="xs:int" use="required"/>

		<xs:attribute name="pkName" type="xs:string"/>

	</xs:complexType>

	<xs:complexType name="DbImportedPKColumnType">

		<xs:sequence>

			<xs:element name="UpdateRule" type="riverock-db-stuct:DbKeyActionRuleType" minOccurs="0"/>

			<xs:element name="DeleteRule" type="riverock-db-stuct:DbKeyActionRuleType" minOccurs="0"/>

			<xs:element name="Deferrability" type="riverock-db-stuct:DbKeyActionRuleType" minOccurs="0"/>

		</xs:sequence>

		<xs:attribute name="pkSchemaName" type="xs:string"/>

		<xs:attribute name="pkTableName" type="xs:string"/>

		<xs:attribute name="pkColumnName" type="xs:string"/>

		<xs:attribute name="fkSchemaName" type="xs:string"/>

		<xs:attribute name="fkTableName" type="xs:string"/>

		<xs:attribute name="fkColumnName" type="xs:string"/>

		<xs:attribute name="keySeq" type="xs:int"/>

		<xs:attribute name="fkName" type="xs:string"/>

		<xs:attribute name="pkName" type="xs:string"/>

	</xs:complexType>

	<xs:complexType name="DbImportedKeyListType">

		<xs:sequence>

			<xs:element name="Keys" type="riverock-db-stuct:DbImportedPKColumnType" minOccurs="0" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbKeyActionRuleType">

		<xs:attribute name="ruleType" type="xs:int"/>

		<xs:attribute name="ruleName" type="xs:string"/>

	</xs:complexType>

	<xs:complexType name="DbDataSchemaType">

		<xs:sequence>

			<xs:element name="Tables" type="riverock-db-stuct:DbDataTableType" minOccurs="0" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbDataTableType">

		<xs:sequence>

			<xs:element name="Records" type="riverock-db-stuct:DbDataRecordType" minOccurs="0" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbDataRecordType">

		<xs:sequence>

			<xs:element name="FieldsData" type="riverock-db-stuct:DbDataFieldDataType" maxOccurs="unbounded"/>

		</xs:sequence>

	</xs:complexType>

	<xs:complexType name="DbDataFieldDataType">

		<xs:sequence>

			<xs:element name="JavaTypeField" type="xs:int"/>

			<xs:element name="StringData" type="xs:string" minOccurs="0"/>

			<xs:element name="DateData" type="xs:dateTime" minOccurs="0"/>

			<xs:element name="NumberData" type="xs:decimal" minOccurs="0"/>

			<xs:element name="IsNull" type="xs:boolean"/>

		</xs:sequence>

		<xs:attribute name="size" type="xs:int" use="required"/>

		<xs:attribute name="decimalDigit" type="xs:int"/>

	</xs:complexType>

</xs:schema>

