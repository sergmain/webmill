<project name="Webmill schema generic" default="gen_all_schema" basedir=".">

    <import file="../riverock-globals-prop.xml"/>
    <import file="../riverock-globals-target.xml"/>

    <target name="clean">
        <antcall target="delete_all_schema"/>
    </target>

    <target name="gen_all_schema">
        <antcall target="delete_all_schema"/>
        <antcall target="gen_all_db_schema"/>
        <antcall target="gen_config_schema"/>
        <antcall target="gen_transfer_file_schema"/>
    </target>

    <target name="gen_all_db_schema">
        <antcall target="gen_db_schema"/>
        <antcall target="gen_db_structure_schema"/>
    </target>

    <target name="gen_config_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/generic/schema/config/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-generic-config.xsd"/>
        <property name="schema-package-java" value="org.riverock.generic.schema.config"/>
        <antcall target="gen_schema_from_schema"/>
    </target>

    <target name="gen_transfer_file_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/generic/schema/transfer/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-transfer-file.xsd"/>
        <property name="schema-package-java" value="org.riverock.generic.schema.transfer"/>
        <antcall target="gen_schema_from_schema"/>
    </target>

    <target name="gen_db_structure_schema" >
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/generic/schema/db/structure"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-database-structure.xsd"/>
        <property name="schema-package-java" value="org.riverock.generic.schema.db.structure"/>
        <antcall target="gen_schema_from_schema"/>
    </target>

    <target name="gen_db_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/generic/schema/db"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-database.xsd"/>
        <property name="schema-package-java" value="org.riverock.generic.schema.db"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
</project>
