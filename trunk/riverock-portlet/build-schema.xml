        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-desc.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.description"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_schema">
