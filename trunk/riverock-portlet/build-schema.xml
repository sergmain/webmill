        <antcall target="gen_portlet_shop_schema"/>
        <antcall target="gen_portlet_menu_schema"/>
        <antcall target="gen_portlet_news_block_schema"/>
        <antcall target="gen_portlet_faq_schema"/>
        <antcall target="gen_portlet_job_schema"/>
        <antcall target="gen_portlet_menu_member_schema"/>
