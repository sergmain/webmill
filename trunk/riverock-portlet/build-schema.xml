<project name="Portlet schema classes gen" default="gen_all_schema" basedir=".">

    <import file="../riverock-globals-prop.xml"/>
    <import file="../riverock-globals-target.xml"/>

    <property name="main-package" value="org.riverock.portlet"/>
    <property name="main-package.dir" value="org/riverock/portlet"/>

    <target name="clean">
        <antcall target="delete_all_schema"/>
    </target>

    <target name="gen_all_schema">
        <antcall target="delete_all_schema"/>
        <antcall target="gen_member_schema"/>
        <antcall target="gen_price_schema"/>
        <antcall target="gen_import_price_schema"/>
        <antcall target="gen_config_schema"/>

        <antcall target="gen_core-extend_schema"/>
        <antcall target="gen_core_schema"/>
        <antcall target="gen_portlet_schema"/>
    </target>
    <target name="gen_config_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/config/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-config.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.config"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_shop_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/shop/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-shop.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.shop"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
