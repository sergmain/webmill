<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	<xs:complexType name="BindXmlType">
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="node" type="xs:string"/>
	</xs:complexType>
	<xs:complexType name="ClassType">
		<xs:sequence>
			<xs:element name="map-to" type="MapToType"/>
			<xs:element name="field" type="FieldType" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="access" type="xs:string"/>
	</xs:complexType>
	<xs:complexType name="FieldType">
		<xs:sequence>
			<xs:element name="bind-xml" type="BindXmlType"/>
		</xs:sequence>
		<xs:attribute name="name" type="xs:string" use="required"/>
		<xs:attribute name="type" type="xs:string" use="required"/>
		<xs:attribute name="collection" type="xs:string"/>
		<xs:attribute name="direct" type="xs:boolean"/>
	</xs:complexType>
	<xs:complexType name="MapToType">
		<xs:attribute name="xml" type="xs:string" use="required"/>
	</xs:complexType>
	<xs:complexType name="MappingType">
		<xs:sequence>
			<xs:element name="class" type="ClassType" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>
</xs:schema>
