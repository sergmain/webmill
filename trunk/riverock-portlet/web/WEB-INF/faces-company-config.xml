<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>

 <managed-bean>
  <managed-bean-name>companyService</managed-bean-name>
  <managed-bean-class>org.riverock.portlet.company.bean.CompanyService</managed-bean-class>
  <managed-bean-scope>application</managed-bean-scope>
 </managed-bean>

 <managed-bean>
  <managed-bean-name>companySessionBean</managed-bean-name>
  <managed-bean-class>org.riverock.portlet.company.bean.CompanySessionBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>

 <managed-bean>
  <managed-bean-name>action</managed-bean-name>
  <managed-bean-class>org.riverock.portlet.company.bean.CompanyAction</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
  <managed-property>
   <property-name>sessionBean</property-name>
   <value>#{companySessionBean}</value>
  </managed-property>
  <managed-property>
   <property-name>authSessionBean</property-name>
   <value>#{authSessionBean}</value>
  </managed-property>
 </managed-bean>

 <managed-bean>
  <managed-bean-name>authSessionBean</managed-bean-name>
  <managed-bean-class>org.riverock.portlet.main.AuthSessionBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>

 <navigation-rule>
  <from-view-id>/riverock/company/company.jsp</from-view-id>
  <navigation-case>
   <from-outcome>company-add</from-outcome>
   <to-view-id>/riverock/company/company-add.jsp</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>company-edit</from-outcome>
   <to-view-id>/riverock/company/company-edit.jsp</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>company-delete</from-outcome>
   <to-view-id>/riverock/company/company-delete.jsp</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>company</from-outcome>
   <to-view-id>/riverock/company/company.jsp</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/riverock/company/company-add.jsp</from-view-id>
  <navigation-case>
   <from-outcome>company</from-outcome>
   <to-view-id>/riverock/company/company.jsp</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/riverock/company/company-edit.jsp</from-view-id>
  <navigation-case>
   <from-outcome>company</from-outcome>
   <to-view-id>/riverock/company/company.jsp</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/riverock/company/company-delete.jsp</from-view-id>
  <navigation-case>
   <from-outcome>company</from-outcome>
   <to-view-id>/riverock/company/company.jsp</to-view-id>
  </navigation-case>
 </navigation-rule>
 <lifecycle/>
 <application>
  <locale-config>
   <supported-locale>ru</supported-locale>
   <supported-locale>en</supported-locale>
  </locale-config>
  <message-bundle>org.riverock.portlet.company.resource.Company</message-bundle>
 </application>

 <factory/>

</faces-config>
