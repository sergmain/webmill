<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
    <managed-bean>
        <managed-bean-name>siteSessionBean</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.SiteSessionBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>siteTree</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.SiteTree</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>siteService</property-name>
            <property-class>org.riverock.portlet.manager.site.SiteService</property-class>
            <value>#{siteService}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>siteDataProvider</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.DataProvider</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>siteService</property-name>
            <property-class>org.riverock.portlet.manager.site.SiteService</property-class>
            <value>#{siteService}</value>
        </managed-property>
        <managed-property>
            <property-name>siteSessionBean</property-name>
            <value>#{siteSessionBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>siteService</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.SiteService</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <!-- Actions -->
    <managed-bean>
        <managed-bean-name>siteAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.action.SiteAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>siteSessionBean</property-name>
            <value>#{siteSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>authSessionBean</property-name>
            <value>#{authSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>dataProvider</property-name>
            <value>#{siteDataProvider}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>cssAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.action.CssAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>siteSessionBean</property-name>
            <value>#{siteSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>authSessionBean</property-name>
            <value>#{authSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>dataProvider</property-name>
            <value>#{siteDataProvider}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>siteLanguageAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.action.SiteLanguageAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>siteSessionBean</property-name>
            <value>#{siteSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>authSessionBean</property-name>
            <value>#{authSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>dataProvider</property-name>
            <value>#{siteDataProvider}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>templateAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.action.TemplateAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>siteSessionBean</property-name>
            <value>#{siteSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>authSessionBean</property-name>
            <value>#{authSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>dataProvider</property-name>
            <value>#{siteDataProvider}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>xsltAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.site.action.XsltAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>siteSessionBean</property-name>
            <value>#{siteSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>authSessionBean</property-name>
            <value>#{authSessionBean}</value>
        </managed-property>
        <managed-property>
            <property-name>dataProvider</property-name>
            <value>#{siteDataProvider}</value>
        </managed-property>
    </managed-bean>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>site</from-outcome>
            <to-view-id>/riverock/manager/site/site.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>site-add</from-outcome>
            <to-view-id>/riverock/manager/site/site-add.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>site-edit</from-outcome>
            <to-view-id>/riverock/manager/site/site-edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>site-delete</from-outcome>
            <to-view-id>/riverock/manager/site/site-delete.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>site-language-add</from-outcome>
            <to-view-id>/riverock/manager/site/site-language-add.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>site-language-edit</from-outcome>
            <to-view-id>/riverock/manager/site/site-language-edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>site-language-delete</from-outcome>
            <to-view-id>/riverock/manager/site/site-language-delete.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>css-add</from-outcome>
            <to-view-id>/riverock/manager/site/css-add.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>css-edit</from-outcome>
            <to-view-id>/riverock/manager/site/css-edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>css-delete</from-outcome>
            <to-view-id>/riverock/manager/site/css-delete.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>template-add</from-outcome>
            <to-view-id>/riverock/manager/site/template-add.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>template-edit</from-outcome>
            <to-view-id>/riverock/manager/site/template-edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>template-delete</from-outcome>
            <to-view-id>/riverock/manager/site/template-delete.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>xslt-add</from-outcome>
            <to-view-id>/riverock/manager/site/xslt-add.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>xslt-edit</from-outcome>
            <to-view-id>/riverock/manager/site/xslt-edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>xslt-delete</from-outcome>
            <to-view-id>/riverock/manager/site/xslt-delete.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>ru</supported-locale>
        </locale-config>
        <message-bundle>org.riverock.portlet.manager.resource.Site_en</message-bundle>
    </application>
</faces-config>
