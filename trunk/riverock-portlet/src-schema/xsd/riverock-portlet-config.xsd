<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

	<xs:annotation>

		<xs:documentation>Copyright 2002-2003, jSmithy.com, http://www.jSmithy.com</xs:documentation>

	</xs:annotation>

	<xs:annotation>

		<xs:documentation>riverock portlet config schema</xs:documentation>

	</xs:annotation>

	<xs:element name="PortletConfig" type="PortletConfigType"/>

	<xs:complexType name="PortletConfigType">

		<xs:sequence>

			<xs:element name="PortletTempDir" type="xs:string" default="\\tmp"/>

			<xs:element name="PortletDebugDir" type="xs:string" default="c:\\opt1" minOccurs="0"/>

		</xs:sequence>

		<xs:attribute name="isDebugDirInit" type="xs:boolean" default="false"/>

		<xs:attribute name="isTempDirInit" type="xs:boolean" default="false"/>

	</xs:complexType>

</xs:schema>

