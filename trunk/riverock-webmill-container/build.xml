<project name="Riverock Webmill portlet container" default="jar_without_copy" basedir=".">

    <property name="Name" value="riverock-webmill-container"/>
    <property name="release-version" value="1.0.0"/>
    <property name="manifest-title-name" value="WebMill portlet container"/>
    <property name="manifest-vendor-name" value="WebMill. http://webmill.askmore.info"/>

    <import file="../riverock-include.xml"/>

    <property name="site.name" value="_localhost"/>
    <property name="tomcat.dir" value="tomcat"/>
    <property name="src.site.dir" value="${src.jsp.dir}/${site.name}"/>
    <property name="webinf.jsp.dir" value="${src.site.dir}/WEB-INF"/>

    <path id="classpath-base">
        <pathelement location="${lib.dir}/${riverock-interfaces.lib}"/>
        <pathelement location="${lib.dir}/${riverock-common.lib}"/>
        <pathelement location="${lib.dir}/${riverock-generic.lib}"/>
        <pathelement location="${lib.dir}/${riverock-cache.lib}"/>
        <pathelement location="${lib.dir}/${riverock-sql-parser.lib}"/>
        <pathelement location="${lib.dir}/${log4j.lib}"/>

        <pathelement location="${lib.dir}/${commons-httpclient.lib}"/>
        <pathelement location="${lib.dir}/${commons-digester.lib}"/>
        <pathelement location="${lib.dir}/${commons-beanutils.lib}"/>

        <pathelement location="${lib.dir}/${jsp-api.lib}"/>
        <pathelement location="${lib.dir}/${servlet.lib}"/>
        <pathelement location="${lib.dir}/${portlet.lib}"/>
        <pathelement location="${lib.dir}/${jdom.lib}"/>
    </path>

    <target name="full_build_module">
        <antcall target="full_clean"/>
        <antcall target="jar"/>
    </target>

    <target name="full_clean">
        <antcall target="clean"/>
    </target>

    <target name="copy_jar_and_restart_apache">
        <antcall target="stop.apache"/>
        <antcall target="jar"/>
        <copy file="${build.dir}\${main.lib}" todir="${tomcat-home}/shared/lib"/>
        <antcall target="start.apache"/>
    </target>

    <target name="delete_existing_files">
        <property name="path-to-ctx" value="org/riverock/webmill/portlet"/>
        <delete file="${build.dest}/${path-to-ctx}/ContextNavigator.class"/>
        <delete file="${build.dest}/${path-to-ctx}/impl/PortletContextImpl.class"/>
        <delete file="${build.dest}/${path-to-ctx}/impl/PortletContextImpl$PortalVersion.class"/>
    </target>

    <target name="compile" depends="set_build_number, prepare">
        <javac
            target="${java.class.target}"
            source="${java.class.source}"
            srcdir="${src.java.dir}"
            destdir="${build.dest}"
            debug="${debug}"
            deprecation="${deprecation}"
            optimize="${optimize}"
            failonerror="true"
            >
            <classpath>
                <path refid="classpath-base"/>
                <path location="${build.dest}"/>
            </classpath>
            <compilerarg value="-Xlint:unchecked"/>
        </javac>

        <property name="tld-path" value="/org/riverock/webmill/container/tags"/>
        <patternset id="tld.resources">
            <include name="*.tld"/>
        </patternset>
        <copy todir="${build.dest}${tld-path}" overwrite="true">
            <fileset dir="${src.java.dir}${tld-path}">
                <patternset refid="tld.resources"/>
            </fileset>
        </copy>

    </target>
</project>
