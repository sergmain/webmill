<Server port="8005" shutdown="SHUTDOWN" debug="9999" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="E:\sandbox\millengine\src\xsd\mill-tomcat.xsd">

	<!-- Uncomment these entries to enable JMX MBeans support -->

	<Listener className="org.apache.catalina.mbeans.ServerLifecycleListener" debug="0"/>

	<Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener" debug="9999"/>

	<!-- Global JNDI resources -->

	<GlobalNamingResources>

		<!--

<Environment name="maxExemptions" value="13" type="java.lang.Integer" override="true" naming="true"/>

-->

		<Environment name="simpleValue" type="java.lang.Integer" value="30" naming="true"/>

		<Resource name="UserDatabase" auth="Container" type="org.apache.catalina.UserDatabase" description="User database that can be updated and saved"/>

		<ResourceParams name="UserDatabase">

			<parameter>

				<name>factory</name>

				<value>org.apache.catalina.users.MemoryUserDatabaseFactory</value>

			</parameter>

			<parameter>

				<name>pathname</name>

				<value>conf/tomcat-users.xml</value>

			</parameter>

		</ResourceParams>

		<Resource name="bean/MyBeanFactory" auth="Container" type="a.MyBean"/>

		<ResourceParams name="bean/MyBeanFactory">

			<parameter>

				<name>factory</name>

				<value>org.apache.naming.factory.BeanFactory</value>

			</parameter>

			<parameter>

				<name>bar</name>

				<value>23</value>

			</parameter>

		</ResourceParams>

	</GlobalNamingResources>

	<!-- Define the Tomcat Stand-Alone Service -->

	<Service name="Tomcat-Standalone">

		<!-- Define a non-SSL Coyote HTTP/1.1 Connector on port 8081 -->

		<Connector className="org.apache.coyote.tomcat4.CoyoteConnector" port="80" minProcessors="5" maxProcessors="75" enableLookups="false" redirectPort="8443" acceptCount="10" debug="0" connectionTimeout="20000" useURIValidationHack="false"/>

		<!-- Define the top level container in our container hierarchy -->

		<Engine name="Standalone" defaultHost="default.askmore" debug="0">

			<!--

<DefaultContext>



  <ResourceLink name="bean/MyBeanFactory"

            global="bean/MyBeanFactory"

            type="a.MyBean"/>



  <ResourceLink name="users" global="UserDatabase"

                type="org.apache.catalina.UserDatabase"/>



 <Parameter name="companyName" value="My Company, Incorporated" override="false"/>



</DefaultContext>

-->

			<Logger className="org.apache.catalina.logger.FileLogger" suffix=".txt" timestamp="true" debug="0" directory="logs/_catalina_" prefix="catalina_log."/>

			<Realm className="org.apache.catalina.realm.MemoryRealm"/>

			<Host name="me.askmore" debug="0" appBase="d:\opt2\_me.askmore.info" autoDeploy="true">

				<Alias>test</Alias>

				<Valve className="org.apache.catalina.valves.AccessLogValve" suffix=".txt" pattern="common" debug="0" directory="c:\opt2\logs\_me.askmore/access" prefix="access_log."/>

				<Logger className="org.apache.catalina.logger.FileLogger" suffix=".txt" timestamp="true" debug="0" directory="c:\opt2\logs\_me.askmore\log" prefix="log."/>

				<Context path="" docBase="data" debug="9999" reloadable="true" useNaming="true" crossContext="true"/>

				<!--

				<Context path="/mill" docBase="mill" debug="9999" reloadable="true" useNaming="true" crossContext="true">

<ResourceLink name="linkToGlobalResource" global="simpleValue" type="java.lang.Integer"/>

<ResourceLink name="bean/MyBeanFactory"

            global="bean/MyBeanFactory"

            type="a.MyBean"/>



<ResourceLink name="users" global="UserDatabase"

                type="org.apache.catalina.UserDatabase"/>

			</Context>

-->

			</Host>

		</Engine>

	</Service>

</Server>

