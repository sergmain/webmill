<project name="Webmill schema classes gen" default="gen_all_schema" basedir=".">

    <property name="java.target" value="1.4"/>
    <property name="java.class.target" value="1.4"/>

    <property name="lib.dir" value="../riverock-lib/lib"/>
    <property name="local-lib.dir" value="lib"/>


    <property file="../riverock.properties"/>

    <property name="src.dir" value="src-schema"/>
    <property name="src.java.dir" value="${src.dir}/java"/>
    <property name="src.xsd.dir" value="${src.dir}/xsd"/>
    <property name="src.xml.dir" value="${src.dir}/xml"/>

    <path id="classpath-base">
        <pathelement location="${lib.dir}/${log4j.lib}"/>
        <pathelement location="${lib.dir}/${common-logging.lib}"/>
        <pathelement location="${lib.dir}/${castor-schema.lib}"/>
        <pathelement location="${lib.dir}/${xerces.lib}"/>
        <pathelement location="${lib.dir}/${xml-api.lib}"/>
    </path>

    <target name="clean">
        <antcall target="delete_all_schema"/>
    </target>

    <target name="delete_all_schema">
        <delete includeEmptyDirs="false" failonerror="false">
            <fileset dir="${src.java.dir}/org/riverock/webmill/schema/">
                <include name="**/*.java"/>
                <exclude name="**/CVS/**"/>
            </fileset>
        </delete>
        <delete dir="${src.java.dir}/org" includeemptydirs="true"/>
    </target>

    <target name="gen_all_schema">
        <antcall target="delete_all_schema"/>

        <antcall target="gen_site_schema"/>
        <antcall target="gen_tomcat_schema"/>
        <antcall target="gen_config_schema"/>
        <antcall target="gen_appl-server_schema"/>
        <antcall target="gen_types_schema"/>
        <antcall target="gen_core-extend_schema"/>
    </target>

    <target name="gen_config_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema/config/"/>
        <property name="schema-file" value="${src.xsd.dir}/riverock-webmill-config.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.config"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_javax_portlet_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema\javax\portlet"/>
        <property name="schema-file" value="${src.xsd.dir}/portlet.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.javax.portlet"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_site_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema/site/"/>
        <property name="schema-file" value="${src.xsd.dir}/riverock-webmill-site.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.site"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_tomcat_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema\tomcat\"/>
        <property name="schema-file" value="${src.xsd.dir}/riverock-tomcat.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.tomcat4"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_appl-server_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema/appl_server/"/>
        <property name="schema-file" value="${src.xsd.dir}/riverock-webmill-appl-server.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.appl_server"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_types_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema/types/"/>
        <property name="schema-file" value="${src.xsd.dir}/riverock-webmill-types.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.types"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_core-extend_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema/extend/"/>
        <property name="schema-file" value="${src.xsd.dir}/riverock-core-extend.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.extend"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_test_schema">
        <property name="schema-dir" value="${src.java.dir}/org/riverock/webmill/schema\test\"/>
        <property name="schema-file" value="${src.xsd.dir}/riverock-test-schema.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.test"/>
        <antcall target="gen_schema"/>
    </target>
    <target name="gen_schema">
        <echo message="XSD - ${schema-file}"/>
        <java fork="true" classname="org.exolab.castor.builder.SourceGenerator">
            <arg value="-i"/>
            <arg value="${schema-file}"/>
            <arg value="-package"/>
            <arg value="${schema-package-java}"/>
            <arg value="-dest"/>
            <arg value="${src.java.dir}"/>
            <arg value="-types"/>
            <arg value="j2"/>
            <arg value="-f"/>
            <arg value="-binding-file"/>
            <arg value="${src.xml.dir}/binding.xml"/>
            <classpath>
                <pathelement location="${local-lib.dir}/castor" />
                <path refid="classpath-base"/>
            </classpath>
        </java>
    </target>


</project>
