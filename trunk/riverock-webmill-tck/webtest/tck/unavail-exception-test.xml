<!DOCTYPE project SYSTEM "../portal.dtd">

<project name="Portlet TCK webtest" basedir="../..">

    <import file="../../webtest-constants.xml" />

    <property name="portletName" value="portlet-tck-unavail-exception"/>
    <property file="webtest/webtest-regexp.properties"/>

    <import file="../../global-properties.xml" />

    <target name="all">
        <echo message="Start all class loader tests"/>
        <antcall target="clean-prepare"/>
        <antcall target="UnavailableExceptionCtr1Test"/>
        <antcall target="UnavailableExceptionCtr2Test"/>
        <antcall target="IsPermanentTest"/>
    </target>

    <target name="UnavailableExceptionCtr1Test">
        <echo message="Start UnavailableExceptionCtr1Test test"/>
        <testSpec name="UnavailableExceptionCtr1Test">
            &configDeclare;
            <steps description="UnavailableExceptionCtr1Test">
                &initGlobalProperties;
                <storeDynamicProperty description="Portlet test name" name="portlet-test-name"
                    value="UnavailableExceptionCtr1TestPortlet"/>
                <storeDynamicProperty description="Success test result" name="success-test-result"
                    value="UnavailableExceptionCtr1Test Test PASSED."/>
                &testWithoutClickLink;
            </steps>
        </testSpec>
    </target>

    <target name="UnavailableExceptionCtr2Test">
        <echo message="Start UnavailableExceptionCtr2Test test"/>
        <testSpec name="UnavailableExceptionCtr2Test">
            &configDeclare;
            <steps description="UnavailableExceptionCtr2Test">
                &initGlobalProperties;
                <storeDynamicProperty description="Portlet test name" name="portlet-test-name"
                    value="UnavailableExceptionCtr2TestPortlet"/>
                <storeDynamicProperty description="Success test result" name="success-test-result"
                    value="UnavailableExceptionCtr2Test Test PASSED."/>
                &testWithoutClickLink;
            </steps>
        </testSpec>
    </target>

    <target name="IsPermanentTest">
        <echo message="Start IsPermanentTest test"/>
        <testSpec name="IsPermanentTest">
            &configDeclare;
            <steps description="IsPermanentTest">
                &initGlobalProperties;
                <storeDynamicProperty description="Portlet test name" name="portlet-test-name"
                    value="IsPermanentTestPortlet"/>
                <storeDynamicProperty description="Success test result" name="success-test-result"
                    value="IsPermanentTest Test PASSED."/>
                &testWithoutClickLink;
            </steps>
        </testSpec>
    </target>

</project>
