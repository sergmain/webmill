<!DOCTYPE project SYSTEM "../portal.dtd">

<project name="Portlet TCK webtest" basedir="../..">

    <import file="../../webtest-constants.xml" />

    <property name="portletName" value="portlet-tck-portlet-exception"/>
    <property file="webtest/webtest-regexp.properties"/>
    <property name="applicationName" value="portlet_jp_PortletException_web"/>

    <import file="../../global-properties.xml" />

    <target name="all">
        <echo message="Start all class loader tests"/>
        <antcall target="clean-prepare"/>
        <antcall target="PortletExceptionCtr1Test"/>
        <antcall target="PortletExceptionCtr2Test"/>
        <antcall target="PortletExceptionCtr3Test"/>
        <antcall target="PortletExceptionCtr4Test"/>
        <antcall target="PrintStackTraceTest"/>
        <antcall target="PrintStackTraceStreamTest"/>
        <antcall target="PrintStackTraceWriterTest"/>
    </target>

    <target name="PortletExceptionCtr1Test">
        <echo message="Start PortletExceptionCtr1Test test"/>
        <testSpec name="PortletExceptionCtr1Test">
            &configDeclare;
            <steps description="PortletExceptionCtr1Test">
                &initGlobalProperties;
                <storeDynamicProperty description="Portlet test name" name="portlet-test-name"
                    value="PortletExceptionCtr1TestPortlet"/>
                <storeDynamicProperty description="Success test result" name="success-test-result"
                    value="PortletExceptionCtr1Test Test PASSED."/>
                &testWithoutClickLink;
            </steps>
        </testSpec>
    </target>

