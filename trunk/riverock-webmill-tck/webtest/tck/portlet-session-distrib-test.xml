<!DOCTYPE project SYSTEM "../portal.dtd">

<project name="Portlet TCK webtest" basedir="../..">

    <import file="../../webtest-constants.xml" />

    <property name="portletName" value="portlet-tck-portlet-session-distrib"/>
    <property file="webtest/webtest-regexp.properties"/>
    <property name="applicationName" value="portlet_jp_PortletSession_distributableapp_web"/>

    <import file="../../global-properties.xml" />

    <target name="all">
        <echo message="Start all portlet session distributable tests"/>
        <antcall target="clean-prepare"/>
        <antcall target="CheckPortletInDistributeAppTest"/>
    </target>

    <target name="CheckPortletInDistributeAppTest">
        <echo message="Start CheckPortletInDistributeAppTest test"/>
        <testSpec name="CheckPortletInDistributeAppTest">
            &configDeclare;
            <steps description="GetResourceInJarTest">
                &initGlobalProperties;
                <storeDynamicProperty description="Portlet test name" name="portlet-test-name"
                    value="CheckPortletInDistributeAppTestPortlet"/>
                <storeDynamicProperty description="Success test result" name="success-test-result"
                    value="CheckPortletInDistributeAppTest Test PASSED."/>

                &testWithClickOnLink;   
<!--                &testWithoutClickLink; -->

            </steps>
        </testSpec>
    </target>

</project>
