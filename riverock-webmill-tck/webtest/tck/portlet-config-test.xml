        <antcall target="GetResourceBundleInlineWithLocalesTest"/>
    </target>

    <target name="GetInitParameterIllegalArgumentExceptionTest">
        <echo message="Start GetInitParameterIllegalArgumentExceptionTest test"/>
        <testSpec name="GetInitParameterIllegalArgumentExceptionTest">
            &configDeclare;
            <steps description="GetInitParameterIllegalArgumentExceptionTest">
                &initGlobalProperties;
                <storeDynamicProperty description="Portlet test name" name="portlet-test-name"
                    value="GetInitParameterIllegalArgumentExceptionTestPortlet"/>
                <storeDynamicProperty description="Success test result" name="success-test-result"
                    value="GetInitParameterIllegalArgumentExceptionTest Test PASSED."/>
                &testWithoutClickLink;
            </steps>
        </testSpec>
    </target>

