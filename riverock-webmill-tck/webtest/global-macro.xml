<!DOCTYPE project SYSTEM "portal.dtd">

<project name="Webtest global macro file" basedir=".">



    <macrodef name="testWithoutClick_2_invoke_with_helper">
        <attribute name="portlet"/>
        <attribute name="helper"/>
        <attribute name="result"/>
        <sequential>
            <property name="webmill.lib-dir" value="@{webmill-context}/WEB-INF/lib"/>
        <echo message="Start @{portlet} test"/>
        <testSpec name="@{portlet}">
            &configDeclare;
            <steps description="@{portlet}">
                &initGlobalProperties;
                <storeDynamicProperty description="Portlet test name" name="portlet-test-name"
                    value="@{portlet}"/>
                <storeDynamicProperty description="Portlet test name" name="portlet-helper-test-name"
                    value="@{helper}"/>
                <storeDynamicProperty description="Success test result" name="success-test-result"
                    value="@{result}"/>
                &testWithoutClick_2_invoke_with_helper; 
            </steps>
        </testSpec>

        </sequential>
    </macrodef>

