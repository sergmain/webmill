<project name="Portlet schema classes gen" default="gen_all_schema" basedir=".">

    <import file="../riverock-globals-prop.xml"/>
    <import file="../riverock-globals-target.xml"/>

    <property name="main-package" value="org.riverock.portlet"/>
    <property name="main-package.dir" value="org/riverock/portlet"/>

    <target name="clean">
        <antcall target="delete_all_schema"/>
    </target>

    <target name="gen_all_schema">
        <antcall target="delete_all_schema"/>
        <antcall target="gen_member_schema"/>
        <antcall target="gen_core_schema"/>
        <antcall target="gen_portlet_schema"/>
    </target>
    <target name="gen_menu_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/menu/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-menu.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.menu"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_member_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/member"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-member.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.member"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_core_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/core/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-schema-core.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.core"/>
        <antcall target="gen_schema_from_schema_nomarshall"/>
    </target>
    <target name="gen_portlet_desc_schema_$">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/description/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-desc.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.description"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_schema">
        <antcall target="gen_portlet_article_schema"/>
        <antcall target="gen_portlet_news_block_schema"/>
        <antcall target="gen_portlet_faq_schema"/>
        <antcall target="gen_portlet_job_schema"/>
        <antcall target="gen_portlet_menu_member_schema"/>
        <antcall target="gen_portlet_register_schema"/>
        <antcall target="gen_portlet_login_schema"/>
        <antcall target="gen_menu_schema"/>
    </target>
    <target name="gen_portlet_register_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/register"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-register.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.register"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_login_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/login"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-login.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.login"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_article_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/article"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-article.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.article"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_news_block_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/news_block"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-news-block.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.news_block"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_faq_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/faq"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-faq.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.faq"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_job_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/job"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-job.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.job"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_portlet_menu_member_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/${main-package.dir}/schema/portlet/menu_member/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-portlet-menu-member.xsd"/>
        <property name="schema-package-java" value="${main-package}.schema.portlet.menu_member"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
</project>
