<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

    <!-- User part -->
    <managed-bean>
        <managed-bean-name>auth</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.user.bean.UserTreeBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
           <property-name>authManager</property-name>
           <value>#{authManager}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>authUserAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.user.action.UserAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
           <property-name>authManager</property-name>
           <value>#{authManager}</value>
    	</managed-property>
    	<managed-property>
           <property-name>userHolderBean</property-name>
           <value>#{userHolderBean}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>dataProvider</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.user.logic.DataProvider</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
           <property-name>authManager</property-name>
           <value>#{authManager}</value>
    	</managed-property>
    	<managed-property>
           <property-name>userHolderBean</property-name>
           <value>#{userHolderBean}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>authManager</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.user.logic.AuthManager</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
           <property-name>moduleUserBean</property-name>
           <value>#{moduleUserBean}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>moduleUserBean</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.user.bean.ModuleUserBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>userHolderBean</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.user.bean.UserHolderBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <!-- Role part -->
    <managed-bean>
        <managed-bean-name>auth</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.user.bean.UserTreeBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
           <property-name>authManager</property-name>
           <value>#{authManager}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>roleAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.role.action.RoleAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
           <property-name>roleHolderBean</property-name>
           <value>#{roleHolderBean}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>roleHolderBean</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.role.bean.RoleHolderBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
           <property-name>roleProvider</property-name>
           <value>#{roleProvider}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>roleProvider</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.auth.role.logic.RoleProvider</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

</faces-config>
