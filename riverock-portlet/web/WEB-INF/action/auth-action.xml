<?xml version="1.0" encoding="UTF-8"?>
<action-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="C:\sandbox\riverock\riverock-module\src-schema\xsd\riverock-module-action.xsd">
	<default-action>home</default-action>
	<role>webmill.auth</role>
	<role>webmill.root</role>
	<default-forward name="access-denied" path="/riverock/auth/jsp/access-denied.jsp"/>
	<default-forward name="not-logged" path="/riverock/auth/jsp/not-logged.jsp"/>
	<default-forward name="error" path="/riverock/auth/jsp/action-message.jsp"/>
	<action name="Help action" path="help" default-forward="/riverock/auth/jsp/help.jsp" type="org.riverock.portlet.auth.action.HelpAction"/>
	<action name="Home action" path="home" type="org.riverock.portlet.auth.action.HomeAction">
		<forward name="ok" path="/riverock/auth/jsp/home.jsp"/>
	</action>
	<action name="Bind right action" path="auth-bind-index" type="org.riverock.portlet.auth.action.BindIndexAction">
        <role>webmill.auth_bind</role>
		<forward name="ok" path="/riverock/auth/jsp/bind-index.jsp"/>
	</action>
	<action name="Add bind right action" path="auth-bind-add" type="org.riverock.portlet.auth.action.BindAddAction">
        <role>webmill.auth_bind</role>
		<forward name="ok" path="/riverock/auth/jsp/bind-add.jsp"/>
	</action>
	<action name="Change bind right action" path="auth-bind-change" type="org.riverock.portlet.auth.action.BindChangeAction">
        <role>webmill.auth_bind</role>
		<forward name="ok" path="/riverock/auth/jsp/bind-change.jsp"/>
	</action>
	<action name="Delete bind right action" path="auth-bind-delete" type="org.riverock.portlet.auth.action.BindDeleteAction">
        <role>webmill.auth_bind</role>
		<forward name="ok" path="/riverock/auth/jsp/bind-delete.jsp"/>
	</action>
</action-config>
