<project name="Portlet core library" default="gen_core" basedir=".">
    <import file="../riverock-globals-prop.xml"/>
    <import file="../riverock-globals-target.xml"/>

    <target name="create-schema-from-db">
        <antcall target="del_core_files"/>
        <java
            fork="true"
            dir="${src-core.dir}/jsp/_localhost/WEB-INF"
            failonerror="true"
            classname="org.riverock.system.CreateSchemaFromDb">
            <arg value="../../../xml/gen-core-schema.xml"/>
            <arg value="../../../../../riverock-webmill-db/xml/webmill-schema.xml"/>
            <classpath refid="classpath-core"/>
        </java>
    </target>

    <target name="gen_core">
        <antcall target="create-schema-from-db"/>
        <copy file="${src-core.xsd.dir}/riverock-portlet-schema-core.xsd" todir="${src-schema.xsd.dir}"/>
    </target>

    <target name="clean">
        <antcall target="del_core_files"/>
    </target>

    <target name="gen-core-schema">
        <property name="schema-dir" value="${src-core.java.dir}/org/riverock/portlet/schema/core/"/>
        <property name="schema-file" value="${src-core.xsd.dir}/riverock-portlet-schema-core.xsd"/>
        <property name="schema-package-java" value="org.riverock.portlet.schema.core"/>
        <antcall target="gen_schema_from_core"/>
        <copy file="${schema-file}" todir="${src-schema.xsd.dir}"/>
    </target>

</project>
