<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
    <!-- Actions -->
    <managed-bean>
        <managed-bean-name>monitorAction</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.monitor.action.MonitorAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>monitorTree</managed-bean-name>
        <managed-bean-class>org.riverock.portlet.manager.monitor.MonitorTree</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>manager-monitor</from-outcome>
            <to-view-id>/riverock/manager/monitor/index.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
