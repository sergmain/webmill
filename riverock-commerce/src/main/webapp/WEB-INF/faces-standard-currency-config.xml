<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
    <managed-bean>
        <managed-bean-name>standardCurrencyService</managed-bean-name>
        <managed-bean-class>org.riverock.commerce.manager.std_currency.StandardCurrencyService</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>standardCurrencySessionBean</managed-bean-name>
        <managed-bean-class>org.riverock.commerce.manager.std_currency.StandardCurrencySessionBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>standardCurrencyAction</managed-bean-name>
        <managed-bean-class>org.riverock.commerce.manager.std_currency.StandardCurrencyAction</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>standardCurrencySessionBean</property-name>
            <value>#{standardCurrencySessionBean}</value>
        </managed-property>
    </managed-bean>

    <!-- navigation rules -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>standard-currency-curs-add</from-outcome>
            <to-view-id>/riverock/commerce/manager/standard-currency/standard-currency-curs-add.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>standard-currency-add</from-outcome>
            <to-view-id>/riverock/commerce/manager/standard-currency/standard-currency-add.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>standard-currency-edit</from-outcome>
            <to-view-id>/riverock/commerce/manager/standard-currency/standard-currency-edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>standard-currency-delete</from-outcome>
            <to-view-id>/riverock/commerce/manager/standard-currency/standard-currency-delete.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>standard-currency</from-outcome>
            <to-view-id>/riverock/commerce/manager/standard-currency/standard-currency.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
