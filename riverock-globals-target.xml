<project name="riverock global target file" basedir=".">

    <target name="restart.apache">
        <antcall target="stop.apache"/>
        <antcall target="start.apache"/>
    </target>

    <target name="start.apache">
        <property name="null.prop" value=""/>
        <exec executable="net" outputproperty="null.prop">
            <arg line=" start '${tomcat-service-name}'"/>
        </exec>
    </target>

    <target name="stop.apache">
        <property name="null.prop" value=""/>
        <exec executable="net" outputproperty="null.prop">
            <arg line=" stop '${tomcat-service-name}'"/>
        </exec>
    </target>

    <target name="set_build_number">
        <buildnumber/>
    </target>

    <target name="delete_all_schema">
        <delete dir="${src-schema.java.dir}/org" includeemptydirs="true"/>
    </target>

    <target name="del_core_files">
        <delete dir="${src-core.java.dir}/org" includeemptydirs="true"/>
    </target>

    <target name="gen_schema_from_schema">
        <delete includeEmptyDirs="false" failonerror="false">
            <fileset dir="${schema-dir}">
                <include name="*.java"/>
                <exclude name="**/CVS/**"/>
            </fileset>
        </delete>
        <echo message="XSD - ${schema-file}"/>
        <java fork="true" classname="org.exolab.castor.builder.SourceGenerator">
            <arg value="-i"/>
            <arg value="${schema-file}"/>
            <arg value="-package"/>
            <arg value="${schema-package-java}"/>
            <arg value="-dest"/>
            <arg value="${src-schema.java.dir}"/>
            <arg value="-types"/>
            <arg value="j2"/>
            <arg value="-f"/>
            <arg value="-binding-file"/>
            <arg value="${src-schema.xml.dir}/binding.xml"/>
            <classpath>
                <pathelement location="${local-lib.dir}/castor" />
                <path refid="classpath-schema"/>
            </classpath>
        </java>
    </target>

    <target name="gen_schema_from_core">
        <delete includeEmptyDirs="true" failonerror="false">
            <fileset dir="${schema-dir}">
                <include name="**/*.java"/>
                <exclude name="**/CVS"/>
            </fileset>
        </delete>
        <echo message="XSD - ${schema-file}"/>
        <java fork="true" classname="org.exolab.castor.builder.SourceGenerator">
            <arg value="-i"/>
            <arg value="${schema-file}"/>
            <arg value="-package"/>
            <arg value="${schema-package-java}"/>
            <arg value="-dest"/>
            <arg value="${src-core.java.dir}"/>
            <arg value="-types"/>
            <arg value="j2"/>
            <arg value="-f"/>
            <classpath>
                <pathelement location="${local-lib.dir}/castor"/>
                <path refid="classpath-core"/>
            </classpath>
        </java>
    </target>

</project>
