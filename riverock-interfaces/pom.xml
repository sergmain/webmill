<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.riverock</groupId>
    <artifactId>riverock-interfaces</artifactId>
    <packaging>jar</packaging>
    <version>1.10-SNAPSHOT</version>
    <name>Riverock interfaces</name>
    <url>http://www.riverock.org</url>
    <repositories>
<!--
        <repository>
            <id>java.net</id>
            <url>https://maven-repository.dev.java.net/nonav/repository</url>
            <layout>legacy</layout>
        </repository>
-->
    </repositories>
    <scm>
    	<url>http://riverock.svn.sourceforge.net/viewvc/riverock</url>
    </scm>

  <distributionManagement>
    <site>
      <id>website</id>
      <url>scp://shell.sourceforge.net/home/groups/r/ri/riverock/htdocs/interfaces</url>
    </site>
    <repository>
      <id>riverock-repository</id>
      <name>Riverock repository</name>
      <url>scp://shell.sourceforge.net/home/groups/r/ri/riverock/htdocs/repo</url>
<!--
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
-->
    </repository>
  </distributionManagement>

    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.portlet</groupId>
            <artifactId>portlet-api</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.mail</groupId>
            <artifactId>mail</artifactId>
            <version>1.4</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
