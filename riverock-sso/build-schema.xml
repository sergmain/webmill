    <target name="get_sso_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/sso/schema/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-sso.xsd"/>
        <property name="schema-package-java" value="org.riverock.sso.schema"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
-->    
</project>
