<project name="webmill core library" default="gen_core" basedir=".">

    <!-- Global initialization                                               -->

    <property name="lastversion" value="4.0.1"/>

    <property name="java.target" value="1.4"/>

    <property name="java.class.target" value="1.4"/>



    <property name="lib.dir" value="../js-lib/lib"/>

    <property name="local-lib.dir" value="lib"/>



    <!-- runtime library -->

    <property name="jsmithy-common.lib" value="jsmithy-common-1.2.0.jar"/>

    <property name="jsmithy-generic.lib" value="jsmithy-generic-4.0.0.jar"/>

    <property name="jsmithy-cache.lib" value="jsmithy-cache-1.0.1.jar"/>

    <property name="jsmithy-webmill.lib" value="jsmithy-webmill-4.0.1.jar"/>

    <property name="jsmithy-sql-parser.lib" value="jsmithy-sql-parser-1.1.6.jar"/>

    <property name="jsmithy-schema-support.lib"

        value="jsmithy-schema-support-4.0.2.jar"/>



<!--        <property name="castor.lib" value="castor-0.9.5.2-xml-040210.jar"/>-->

<!--        <property name="castor.lib" value="castor-0.9.5.2-xml-snapshot.jar"/>-->

<!--        <property name="castor.lib" value="castor-0.9.5.1.1-xml.jar"/>-->

    <property name="castor.lib" value="castor-0.9.4.3-xml.jar"/>

<!--        <property name="castor.lib" value="castor-0.9.5.3-xml.jar"/>-->



    <property name="xerces.lib" value="xercesImpl-2.6.0.jar"/>

    <property name="xml-api.lib" value="xmlParserAPIs-2.6.0.jar"/>



    <property name="log4j.lib" value="log4j-1.2.7.jar"/>



    <property name="doc.dir" value="doc"/>

    <property name="src.dir" value="src-core"/>

    <property name="tomcat.dir" value="tomcat"/>



    <property name="src.java.dir" value="${src.dir}/java"/>

    <property name="src.java.mill-schema.dir" value="${src.java.dir}\com"/>

    <property name="src.jsp.dir" value="${src.dir}/jsp"/>

    <property name="src.xsd.dir" value="${src.dir}/xsd"/>



    <property name="manifest-file-name" value="manifest.mf"/>

    <property name="manifest" value="src/java/${manifest-file-name}"/>



    <property name="classpath-extend" value=""/>

<!--

    <property name="classpath" value="${lib.dir}/millengine-v2.encoded.jar:${lib.dir}/mill-schema-support-v1.encoded.jar:${lib.dir}/servlet.jar:${lib.dir}/xercesImpl.jar:${lib.dir}/xalan.jar:${lib.dir}/xml-apis.jar:${lib.dir}/${log4j.lib}:${lib.dir}/junit.jar:${lib.dir}/${castor.lib}:${lib.dir}/ojdbc14.jar:${common-httpclient.lib}:${classpath-extend}"/>

-->

    <path id="classpath-1.4">

        <pathelement location="${lib.dir}/ojdbc14.jar"/>

    </path>

    <path id="classpath-1.3">

        <pathelement location="${lib.dir}/classes12.jar"/>

<!--

        <pathelement location="${lib.dir}/1.3/xalan.jar"/>

        <pathelement location="${lib.dir}/1.3/xercesImpl.jar"/>

        <pathelement location="${lib.dir}/1.3/xml-apis.jar"/>



        <pathelement location="${lib.dir}/xml-commons-1.1.1.jar"/>

-->

        <pathelement location="${lib.dir}/jce1_2_1.jar"/>

    </path>



    <path id="classpath-base">

        <pathelement location="${lib.dir}/${xerces.lib}"/>

        <pathelement location="${lib.dir}/${xml-api.lib}"/>

        <pathelement location="${lib.dir}/${log4j.lib}"/>

        <pathelement location="${lib.dir}/${castor.lib}"/>



        <path refid="classpath-${java.target}"/>

    </path>



    <path id="classpath-v3">

        <pathelement location="${lib.dir}/${jsmithy-common.lib}"/>

        <pathelement location="${lib.dir}/${jsmithy-generic.lib}"/>

        <pathelement location="${lib.dir}/${jsmithy-sql-parser.lib}"/>

        <pathelement location="${lib.dir}/${jsmithy-cache.lib}"/>

        <pathelement location="${lib.dir}/${jsmithy-webmill.lib}"/>

        <pathelement location="${lib.dir}/${jsmithy-schema-support.lib}" />

        <path refid="classpath-base"/>

    </path>



    <property name="packages" value="org.riverock.*"/>

    <property name="build.dir" value="build"/>

    <property name="build.src.java" value="${src.java.dir}"/>

    <property name="build.src.jsp" value="${src.jsp.dir}"/>

    <property name="build.dest" value="${build.dir}/classes"/>

    <property name="dist.dir" value="${build.dir}/dist"/>

    <property name="docs.dir" value="${build.dir}/javadocs"/>



    <!-- The following can be set in .ant.properties                 -->

    <property name="debug" value="on"/>

    <property name="optimize" value="off"/>

    <property name="deprecation" value="on"/>



    <target name="create-schema-from-db" depends="init">

        <antcall target="del_core_files"/>

        <java

            fork="true"

            dir="${src.dir}/jsp/_localhost/WEB-INF"

            failonerror="true"

            classname="org.riverock.system.CreateSchemaFromDb">

            <arg value="../../../xml/gen-core-schema.xml"/>

            <arg value="../../../xsd/webmill-schema.xsd"/>

            <classpath refid="classpath-v3"/>

        </java>

    </target>



    <target name="gen_core" depends="init">

        <antcall target="create-schema-from-db"/>

        <antcall target="process-core-schema"/>

    </target>



    <target name="clean" depends="init">

        <delete failonerror="false">

            <fileset dir="${build.dir}">

                <include name="**"/>

                <include name="*.jar"/>

                <include name="*.tar"/>

                <include name="*.gz"/>

            </fileset>

        </delete>

        <delete dir="${docs.dir}" failonerror="false"/>

        <delete dir="${src.java.dir}/com" failonerror="false"/>

        <delete dir="${build.dir}/src/" failonerror="false"/>

        <delete dir="${build.dir}/classes/" failonerror="false"/>

        <delete dir="${build.dir}/bin/" failonerror="false"/>

        <delete dir="${build.dir}/tomcat/" failonerror="false"/>

        <delete dir="${build.dir}/ext/" failonerror="false"/>

        <delete dir="${build.dir}" failonerror="false"/>



    </target>



    <target name="gen_schema-gen-config" depends="init,prepare">

        <property name="schema-dir" value="${src.java.dir}/com/jsmithy/sso/schema/a3/"/>

        <property name="schema-file" value="${src.dir}\xsd\jsmithy-sso-a3.xsd"/>

        <property name="schema-package-java" value="org.riverock.schema.gen"/>

        <antcall target="gen_schema"/>

    </target>

    <target name="process-core-schema" depends="init,prepare">

        <property name="schema-dir" value="${src.java.dir}/com/jsmithy/sso/schema/core/"/>

        <property name="schema-file" value="${src.dir}\xsd\jsmithy-sso-core.xsd"/>

        <property name="schema-package-java" value="org.riverock.sso.schema.core"/>

        <antcall target="gen_schema"/>

    </target>



    <target name="gen_schema" depends="init" >

<!--        <antcall target="clean"/>-->

        <delete includeEmptyDirs="true" failonerror="false">

            <fileset dir="${schema-dir}">

                <include name="**/*.java"/>

                <exclude name="**/CVS"/>

            </fileset>

        </delete>

        <echo message="XSD - ${schema-file}"/>

        <java fork="true" classname="org.exolab.castor.builder.SourceGenerator">

            <arg value="-i"/>

            <arg value="${schema-file}"/>

            <arg value="-package"/>

            <arg value="${schema-package-java}"/>

            <arg value="-dest"/>

            <arg value="${src.java.dir}"/>

            <arg value="-types"/>

            <arg value="j2"/>

            <arg value="-f"/>

            <classpath>

                <pathelement location="${local-lib.dir}/castor"/>

                <path refid="classpath-v3"/>

            </classpath>

        </java>

    </target>



    <target name="del_core_files" depends="init">

        <delete includeEmptyDirs="true" failonerror="false">

            <fileset dir="${src.java.dir}/com/jsmithy/sso/core">

                <include name="**/*.java"/>

                <exclude name="**/CVS"/>

            </fileset>

            <fileset dir="${src.java.dir}/com/jsmithy/sso/schema/core">

                <include name="**/*.java"/>

                <exclude name="**/CVS"/>

            </fileset>

        </delete>

    </target>



    <!-- Initialization target                                               -->

    <target name="init"/>



    <!-- Note this file can only make Ant display values set in the file correctly, -->

    <!-- but external values in the environment or properties file will be operational.  -->

    <!-- Help on usage                                                       -->

    <target name="usage" depends="init">

        <echo message=""/>

        <echo message=""/>

        <echo message="${Name} Build file"/>

        <echo message="-------------------------------------------------------------"/>

        <echo message=""/>

        <echo message=" available targets are:"/>

        <echo message=""/>

        <echo message="   compile      --> compiles the source code to the tree under ${build.dir}"/>

        <echo message="   package      --> generates the ${Name}.jar file"/>

        <echo message="   prepare-docs --> writes the documentation to ${docs.dir}"/>

        <echo message="   clean        --> cleans up the ${build.dir} directory"/>

        <echo message="   distclean    --> cleans up the distribution directory, ${dist.dir}"/>

        <echo message="   usage        --> show this message (default)"/>

        <echo message=""/>

        <echo message=" See the comments inside the build.xml file for more details."/>

        <echo message="-------------------------------------------------------------"/>

        <echo message=""/>

        <echo message=""/>

    </target>

    <!-- Prepares the build directory                                        -->

    <target name="prepare" depends="init">

        <!--

        <echo message="Preparing the build directories"/>

        -->

        <mkdir dir="${build.dir}"/>

        <mkdir dir="${build.dest}"/>

    </target>

    <!-- Checks for necessary libraries and correct versions of libraries    -->

    <!-- Compiles the source directory                                       -->

    <!-- <target name="compile" depends="prepare"> -->

    <target name="docs" depends="prepare">

        <echo message="Build javadoc"/>

        <!-- create directories -->

        <mkdir dir="${docs.dir}"/>

        <javadoc

            sourcepath="${build.src.java}"

            destdir="${docs.dir}"

            verbose="true"

            defaultexcludes="true"

            packagenames="com/jsmithy/db/*, com/jsmithy/tools/*, com/jsmithy/startup/*"

            excludepackagenames="com/jsmithy/price/*"

            >

            <classpath refid="classpath-v3"/>

        </javadoc>



    </target>

</project>

