<project name="Riverock module schema" default="gen_all_schema" basedir=".">

    <import file="../riverock-globals-prop.xml"/>
    <import file="../riverock-globals-target.xml"/>

    <target name="clean">
        <antcall target="delete_all_schema"/>
    </target>

    <target name="gen_all_schema">
<!--        <antcall target="gen_javax_portlet_schema"/>-->
    </target>

    <target name="gen_javax_portlet_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/interfaces/schema/javax/portlet"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/portlet.xsd"/>
        <property name="schema-package-java" value="org.riverock.interfaces.schema.javax.portlet"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
</project>
