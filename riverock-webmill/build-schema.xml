<project name="Webmill schema classes gen" default="gen_all_schema" basedir=".">

    <import file="../riverock-globals-prop.xml"/>
    <import file="../riverock-globals-target.xml"/>

    <target name="clean">
        <antcall target="delete_all_schema"/>
    </target>

    <target name="gen_all_schema">
        <antcall target="delete_all_schema"/>

        <antcall target="gen_site_schema"/>
<!--        <antcall target="gen_tomcat_schema"/>-->
        <antcall target="gen_config_schema"/>
        <antcall target="gen_appl-server_schema"/>
        <antcall target="gen_types_schema"/>
        <antcall target="gen_core-extend_schema"/>
    </target>

    <target name="gen_config_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema/config/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-webmill-config.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.config"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_javax_portlet_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema\javax\portlet"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/portlet.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.javax.portlet"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_site_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema/site/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-webmill-site.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.site"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_tomcat_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema\tomcat\"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-tomcat.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.tomcat4"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_appl-server_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema/appl_server/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-webmill-appl-server.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.appl_server"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_types_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema/types/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-webmill-types.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.types"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_core-extend_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema/extend/"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-core-extend.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.extend"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
    <target name="gen_test_schema">
        <property name="schema-dir" value="${src-schema.java.dir}/org/riverock/webmill/schema\test\"/>
        <property name="schema-file" value="${src-schema.xsd.dir}/riverock-test-schema.xsd"/>
        <property name="schema-package-java" value="org.riverock.webmill.schema.test"/>
        <antcall target="gen_schema_from_schema"/>
    </target>
</project>
