<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

	<filter>
		<filter-name>RequestStatisticFilter</filter-name>
		<filter-class>org.riverock.webmill.a3.audit.RequestStatisticFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>RequestStatisticFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>WebMill engine startup servlet</servlet-name>
		<servlet-class>org.riverock.generic.startup.StartupServlet</servlet-class>
        <init-param>
            <param-name>is-local-config</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>log-path</param-name>
            <param-value>log4j</param-value>
        </init-param>
        <init-param>
            <param-name>log-config-file</param-name>
            <param-value>config\log4j.properties</param-value>
        </init-param>
        <init-param>
            <param-name>generic-config-file</param-name>
            <param-value>config\config-generic.xml</param-value>
        </init-param>
        <init-param>
            <param-name>sso-config-file</param-name>
            <param-value>config\config-sso.xml</param-value>
        </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ContextNavigator</servlet-name>
		<servlet-class>org.riverock.webmill.portal.ContextNavigator</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>ServletCSS</servlet-name>
		<servlet-class>org.riverock.webmill.main.ServletCSS</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>GooleSitemapServlet</servlet-name>
		<servlet-class>org.riverock.webmill.google.sitemap.GoogleSitemapServlet</servlet-class>
		<load-on-startup>6</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>ContextNavigator</servlet-name>
		<url-pattern>/ctx/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ContextNavigator</servlet-name>
		<url-pattern>/page/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ContextNavigator</servlet-name>
		<url-pattern>/pageid/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletCSS</servlet-name>
		<url-pattern>/css</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GooleSitemapServlet</servlet-name>
		<url-pattern>/sitemap.xml.gz</url-pattern>
	</servlet-mapping>

	<!-- Set the default session timeout (in minutes) -->
	<session-config>
		<session-timeout>15</session-timeout>
	</session-config>
